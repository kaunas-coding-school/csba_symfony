<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        {# {{ encore_entry_link_tags('app') }} #}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
              integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
              crossorigin="anonymous">
        <link type="text/css" rel="stylesheet" href="/css/main.css"/>
    {% endblock %}
</head>
<body>
<div class="navigation">
    {% include 'components/navigation.html.twig' with {'meniu_list': category_list} %}
    <div class="cart">
        {% if cart is defined and cart.getUserCart() is defined %}
            {% set cart = cart.getUserCart() %}
            {% if (cart is not null) %}
                {{ dump(cart) }}
{#                {{ cart.getProducts | length }} |#}
{#                {% set price = cart.totalPrice / 100 %}#}
{#                {{ price | format_currency('EUR', {fraction_digit: 2}) }}#}
            {% endif %}
        {% endif %}
        <div id="notification-message"></div>
    </div>
</div>

<main class="content">
    {% block body %}{% endblock %}
</main>
<footer>&copy; All right reserved 2021 @ My Shop</footer>
{% block javascripts %}
    <script
            src="https://code.jquery.com/jquery-3.6.0.js"
            integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
            crossorigin="anonymous"></script>
    <script src="/js/cart.js"></script>
    {# {{ encore_entry_script_tags('app') }} #}
{% endblock %}
</body>
</html>
